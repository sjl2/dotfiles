# Git Aliases
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gch="git checkout"
alias gf="git fetch"
alias gl="git log"
alias gls="git log --stat"
alias gpsh="git push"
alias gpll="git pull"
alias gr="git rebase"
alias gmod="git merge origin/develop"
alias grom="git rebase origin/develop"
alias grod="git rebase origin/develop"
alias gs="git status"
alias gsh="git show"
alias gpr="git prune"

# Shell Aliases
alias ls="ls -G"
alias psh="pushd"
alias pop="popd"

# Vim Aliases
alias pvim="vim -u NONE"

# Neovim
alias pnv="nvim -u NONE"
alias nv="nvim"

# History Aliases
HIST_FORMAT="'%Y-%m-%d %T:'$(echo -e '\t')"
alias history="fc -t "$HIST_FORMAT" -il 1"

# Terraform Aliases
alias tf="terraform"
alias tfi="terraform init"
alias tfg="terraform get"
alias tfp="terraform plan | scenery"
alias tfa="terraform apply"

# Source
alias sall="source ~/.aliases ~/.bashrc ~/.bash_profile ~/.zshrc ~/.inputrc ~/.helpers.sh ~/.goto.sh"
