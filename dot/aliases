# Git Aliases
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gch="git checkout"
alias gf="git fetch"
alias gl="git log"
alias gls="git log --stat"
alias gpsh="git push"
alias gpll="git pull"
alias gr="git rebase"
alias grom="git rebase origin/master"
alias gs="git status"
alias gsh="git show"
alias gpr="git prune"

# List Aliases
alias ls="ls -G"

# Vim Aliases
alias pvim="vim -u NONE"

# History Aliases
HIST_FORMAT="'%Y-%m-%d %T:'$(echo -e '\t')"
alias history="fc -t "$HIST_FORMAT" -il 1"

# Terraform Aliases
alias tfi="terraform init"
alias tfg="terraform get"
alias tfp="terraform plan | scenery"
alias tfa="terraform apply"
